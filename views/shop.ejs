<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/style/product.css">
</head>
<body>
<%- include('includes/nav.ejs') %>
<main class="main">
    <% if (products.length > 0) { %>
        <div class="grid">
            <% for (const product of products) { %>
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title"><%= product.title %></h1>
                    </header>
                    <div class="card__image">
                        <img src="http://1.bp.blogspot.com/-PaptLPUKN2c/VPSw-nvQBWI/AAAAAAAAyzA/F8WBD_MXcf8/s1600/Barquettes%2Baux%2BMarrons2.jpg" alt="Barquette aux marrons">
                    </div>
                    <div class="card__content">
                        <h2 class="product__price">$3.99</h2>
                        <p class="product__description">
                            It's urgent to rehabilitate this awesome patisserie !
                        </p>
                    </div>
                    <div class="card__actions">
                        <button class="btn">Add to card</button>
                    </div>
                </article>
            <% } %>
        </div>
    <% } else { %>
        <h1>No products found</h1>
    <% } %>
</main>
<%- include('includes/end.ejs') %>
