<body>
<%- include('../includes/nav.ejs') %>

<main class="main">

    <form class="form" action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product <% } %>" method="post">

        <div class="card">
            <h1 class="main-title">
                <% if (editing) { %>
                    Update product
                <% } else { %>
                    Add product
                <% } %>
            </h1>

            <% if (errorMessage) { %>
                <p class="error"><%= errorMessage %></p>
            <% } %>

            <div class="form-group">
                <label class="form-label" for="title">Title</label>
                <input class="form-control <%= validationErrors.find(e => e.param === 'title') ? 'has-error' : ''%>"
                       type="text"
                       name="title"
                       id="title"
                       value="<% if (editing || hasError) { %><%=product.title%><% } %>">
            </div>
            <div class="form-group">
                <label class="form-label" for="imageUrl">Image URL</label>
                <input class="form-control <%= validationErrors.find(e => e.param === 'imageUrl') ? 'has-error' : ''%>"
                       type="text"
                       name="imageUrl"
                       id="imageUrl"
                       value="<% if (editing || hasError) { %><%=product.imageUrl%><% } %>">
            </div>
            <div class="form-group">
                <label class="form-label" for="price">Price</label>
                <input class="form-control <%= validationErrors.find(e => e.param === 'price') ? 'has-error' : ''%>"
                       type="number"
                       step="any"
                       name="price"
                       id="price"
                       value="<% if (editing || hasError) { %><%=product.price%><% } %>">
            </div>
            <div class="form-group">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control <%= validationErrors.find(e => e.param === 'description') ? 'has-error' : ''%>"
                          name="description"
                          id="description"><% if (editing || hasError) { %><%=product.description%><% } %></textarea>
            </div>
            <% if (editing) { %>
                <input type="hidden" name="id" value="<%= product._id %>">
            <% } %>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit">
                <% if (editing) { %>
                    Update product
                <% } else { %>
                    Add product
                <% } %>
            </button>
        </div>

    </form>
</main>
<%- include('../includes/end.ejs') %>
