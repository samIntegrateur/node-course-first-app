<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/style/product.css">
</head>
<body>
<%- include('../includes/nav.ejs') %>
<main class="main">
    <div class="container">
        <article class="card product-item--detail">
            <header class="card__header">
                <h1 class="product__title">
                    <%= product.title %>
                </h1>
            </header>
            <div class="card__body product__body">
                <div class="card__image product__image">
                    <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
                </div>
                <div class="card__content product__content">
                    <h2 class="product__price">$<%= product.price %></h2>
                    <p class="product__description">
                        <%= product.description %>
                    </p>
                    <div class="card__actions product__actions">
                        <% if (isAuthenticated) { %>
                            <%- include('../includes/add-to-cart.ejs') %>
                        <% } %>
                    </div>
                </div>
            </div>
        </article>
    </div>
</main>
<%- include('../includes/end.ejs') %>
