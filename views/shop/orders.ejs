<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/style/product.css">
</head>
<body>
<%- include('../includes/nav.ejs') %>
<main class="main">
    <div class="fixed-size">
        <% if (orders.length <= 0) { %>
            <h1 class="main-title">No orders yet</h1>
        <% } else { %>
            <h1 class="main-title">My orders</h1>
            <ul class="list-reset">
                <% orders.forEach(order => { %>
                    <li class="list-reset__item part">
                        <article class="card">
                            <h2>Order NÂ°<%= order._id %></h2>
                            <p><a class="link" href="/orders/<%= order._id %>">Invoice</a></p>
                            <table class="cart-table part">
                                <thead class="cart-table__head">
                                <tr class="cart-table__row">
                                    <th class="cart-table__cell cart-table__cell--title">
                                        Product name
                                    </th>
                                    <th class="cart-table__cell cart-table__cell--quantity">
                                        Quantity
                                    </th>
                                </tr>
                                </thead>
                                <tbody class="cart-table__body">
                                <% order.products.forEach(item => { %>
                                    <tr class="cart-table__row">
                                        <th class="cart-table__cell cart-table__cell--title">
                                            <%= item.product.title %>
                                        </th>
                                        <td class="cart-table__cell cart-table__cell--quantity">
                                            <%= item.quantity %>
                                        </td>
                                    </tr>
                                <% })%>
                                </tbody>
                            </table>
                        </article>
                    </li>
                <% }); %>
            </ul>
        <% } %>
    </div>
</main>
<%- include('../includes/end.ejs') %>
